{
  "name": "nod-extension",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "rm -rf dist/dev && npm run dev:main & npm run dev:content",
    "dev:main": "vite build --watch --mode development",
    "dev:content": "BUILD_TARGET=content-script vite build --watch --mode development",
    "build": "npm run build:prod",
    "build:prod": "rm -rf dist/prod && vite build --mode production && BUILD_TARGET=content-script vite build --mode production",
    "build:dev": "rm -rf dist/dev && vite build --mode development && BUILD_TARGET=content-script vite build --mode development",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@mozilla/readability": "^0.5.0",
    "clsx": "^2.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/chrome": "^0.0.300",
    "@types/react": "^19.2.3",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.5.0",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^6.0.0",
    "vite-plugin-static-copy": "^3.2.0"
  }
}
