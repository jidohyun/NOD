{
	"manifest_version": 3,
	"name": "NOD - Article Analyzer",
	"version": "0.1.0",
	"description": "Save and analyze articles with AI-powered summarization",
	"permissions": ["activeTab", "storage", "scripting"],
	"host_permissions": ["https://api.nod-archive.com/*", "http://localhost:8000/*"],
	"action": {
		"default_popup": "src/popup/index.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"background": {
		"service_worker": "service-worker.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content-script.js"],
			"run_at": "document_idle"
		}
	],
	"externally_connectable": {
		"matches": ["https://nod-archive.com/*", "http://localhost:3000/*"]
	},
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
